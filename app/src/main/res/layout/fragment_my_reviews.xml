<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/colorFbWhiteBg"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvReviewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:fontFamily="@font/semiboldfont"
            android:text="My Reviews (1 Review)"
            android:visibility="gone"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dp14" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvMyReviews"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvEmptyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/ic_my_reviews"
            android:drawableTint="@color/colorAccent"
            android:gravity="center"
            android:text="No Reviews Found"
            android:textColor="@color/colorNav"
            android:textSize="@dimen/dp20"
            android:visibility="gone" />

    </LinearLayout>
</layout>