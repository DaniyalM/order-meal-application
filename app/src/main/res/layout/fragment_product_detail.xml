<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/tools">


    <ScrollView
        android:id="@+id/productScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_gray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="vertical">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtBrandName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gopro"
                                android:textSize="@dimen/dp12" />

                            <TextView
                                android:id="@+id/txtFeature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppinssemibold"
                                android:text="@string/hero_5_waterproof_action_caemra_64gb"
                                android:textColor="@color/colorBlackButton"
                                android:textSize="@dimen/dp15" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:orientation="horizontal">

                                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                    android:id="@+id/mrRating"
                                    style="@style/Widget.MaterialRatingBar.RatingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:isIndicator="true"
                                    android:minHeight="@dimen/dp12"
                                    android:rating="2.5"
                                    app:mrb_progressTint="@color/colorBlue"
                                    app:mrb_secondaryProgressTint="@color/colorTextGray" />


                                <TextView
                                    android:id="@+id/txtReviewCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp5"
                                    android:textColor="@color/colorBlue"
                                    android:textSize="@dimen/sp10" />

                                <View
                                    android:layout_width="@dimen/dp1"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/dp10"
                                    android:background="@color/colorTextGray" />

                                <TextView
                                    android:id="@+id/txtPostedTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp10"
                                    android:text="15 mins ago"
                                    android:textColor="@color/colorTextGray"
                                    android:textSize="@dimen/dp10" />


                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_weight="0.6"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtProductPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinssemibold"
                                android:singleLine="true"
                                android:text="@string/aed_25"
                                android:textColor="@color/colorBlackButton"
                                android:textSize="@dimen/dp16" />

                            <TextView
                                android:id="@+id/txtPaymentType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/per_day"
                                android:textColor="@color/colorBlackButton"
                                android:textSize="@dimen/dp12" />


                            <TextView
                                android:id="@+id/txtPaymentCalculation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/downarrow"
                                android:drawablePadding="@dimen/dp5"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp5"
                                android:singleLine="true"
                                android:text="@string/select_rent_type"
                                android:textColor="@color/colorTextGray"
                                android:textSize="@dimen/sp12" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
                <!--<com.smarteist.autoimageslider.SliderLayout-->
                <!--android:id="@+id/slider"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--/>-->

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp200"
                    android:layout_marginTop="@dimen/dp15"
                    android:background="@color/lightGray"
                    android:soundEffectsEnabled="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3"
                android:background="@color/white"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgPerson"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:layout_marginStart="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:src="@drawable/placeholder" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_marginStart="@dimen/dp10"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtOwnerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:text="Kevin Cooper"
                            android:textColor="@color/colorBlackButton" />

                        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                            android:id="@+id/mrOwnerRating"
                            style="@style/Widget.MaterialRatingBar.RatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp5"
                            android:isIndicator="true"
                            android:minHeight="@dimen/dp12"
                            app:mrb_progressTint="@color/colorBlue"
                            app:mrb_secondaryProgressTint="@color/colorTextGray" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtProductFeature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp2"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@string/my_preciopus_gopro_hero_5_is_up_for_grabs_this_weekend_take_your_weekend_trips_to_the_next_level"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/sp12" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp8"
                android:background="@color/white">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinssemibold"
                        android:text="@string/product_description"
                        android:textColor="@color/colorBlackButton"
                        android:textSize="@dimen/dp15" />


                    <TextView
                        android:id="@+id/txtProductDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp3"
                        android:text="@string/my_preciopus_gopro_hero_5_is_up_for_grabs_this_weekend_take_your_weekend_trips_to_the_next_level"
                        android:textColor="@color/colorTextGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp20"
                        android:layout_marginTop="@dimen/dp20">


                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/lightGray"
                            android:padding="@dimen/dp5"
                            app:cardCornerRadius="10dp">

                            <structure.com.foodportal.customViews.CustomRecyclerView
                                android:id="@+id/recylerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nestedScrollingEnabled="false"

                                />
                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:background="@color/white">

                <TextView
                    android:id="@+id/btnTermsAndCondition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_marginStart="@dimen/dp10"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/rightarrow"
                    android:fontFamily="@font/poppinssemibold"
                    android:paddingBottom="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:text="@string/terms_of_use"
                    android:textColor="@color/colorBlackButton"
                    android:textSize="@dimen/dp15" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_marginStart="@dimen/dp10"
                    android:background="@color/white"
                    android:fontFamily="@font/poppinssemibold"
                    android:paddingTop="@dimen/dp10"
                    android:text="@string/location"
                    android:textColor="@color/colorBlackButton"
                    android:textSize="@dimen/dp15" />

                <ImageView
                    android:id="@+id/mapImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp200"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp8"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/llMap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp200"
                        android:layout_marginBottom="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp8"
                        map:cameraZoom="13"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_marginStart="@dimen/dp10"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="@string/payment_options"
                    android:textColor="@color/colorBlackButton"
                    android:textSize="@dimen/dp15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtCashColection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp15"
                        android:drawablePadding="@dimen/dp5"
                        android:drawableStart="@drawable/returnicon"
                        android:paddingBottom="@dimen/dp3"
                        android:paddingTop="@dimen/dp3"
                        android:text="@string/cash_on_collection_not" />

                    <TextView
                        android:id="@+id/txtPayOnline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp15"
                        android:drawablePadding="@dimen/dp5"
                        android:drawableStart="@drawable/returnicon"
                        android:paddingBottom="@dimen/dp3"
                        android:paddingTop="@dimen/dp3"
                        android:text="@string/payonline_not" />

                    <TextView
                        android:id="@+id/txtPayOnReturn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp15"
                        android:drawablePadding="@dimen/dp5"
                        android:drawableStart="@drawable/returnicon"
                        android:paddingBottom="@dimen/dp3"
                        android:paddingTop="@dimen/dp3"
                        android:text="@string/not_return" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llPurchaseMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginStart="@dimen/dp10"
                        android:orientation="horizontal">

                        <Button

                            android:id="@+id/btnrentNow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:background="@drawable/roundcorner_button"
                            android:text="@string/rentnow"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.01"
                            android:background="@color/white"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btnAddtoCart"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:background="@drawable/border_item_rounded"
                            android:text="@string/add_to_cart"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlackButton"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp10"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/btnCall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp2"
                            android:layout_weight="1"
                            android:background="@drawable/border_item_rounded"
                            android:text="@string/call"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlackButton"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnSms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp2"
                            android:layout_weight="1"
                            android:background="@drawable/border_item_rounded"
                            android:text="@string/sms"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlackButton"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnEmail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border_item_rounded"
                            android:text="@string/email"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlackButton"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</layout>