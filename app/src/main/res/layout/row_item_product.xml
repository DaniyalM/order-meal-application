<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        android:elevation="@dimen/dp10"
        app:cardPreventCornerOverlap="true"
        app:strokeColor="@color/lightGray"
        app:cardUseCompatPadding="true"
        app:strokeWidth="0.05dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp28">

                <TextView
                    android:id="@+id/txtTagFeature"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/top_left_rounded"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp4"
                    android:paddingEnd="@dimen/dp8"
                    android:paddingStart="@dimen/dp8"
                    android:paddingTop="@dimen/dp4"
                    android:text="@string/newText"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp11"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <CheckBox
                    android:id="@+id/btnFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:button="@drawable/favorite_selector"
                    android:src="@drawable/favorite_selector" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgProductImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp100"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/placeholder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp8"
                    android:layout_marginStart="@dimen/dp8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtProductBrand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp2"
                        android:layout_marginTop="@dimen/dp4"
                        android:maxLines="1"
                        android:text="Apple"
                        android:textColor="@color/colorBlackText"
                        android:textSize="@dimen/sp10"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp2"
                        android:fontFamily="@font/poppinsregular"
                        android:maxLines="1"
                        android:text="13-inch Macbook Air"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp13"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtProductFeature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp2"
                        android:fontFamily="@font/poppinsregular"
                        android:maxLines="1"
                        android:text="1.8GHZ Processor"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp13"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtProductPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppinsregular"
                            android:paddingEnd="@dimen/dp4"
                            android:singleLine="true"
                            android:text="AED 25"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtProductRentType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppinsregular"
                            android:singleLine="true"
                            android:text="@string/per_day"
                            android:textColor="@color/colorBlackText"
                            android:textSize="@dimen/sp10"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:maxLines="1"
                            android:paddingEnd="3dp"
                            android:text="@string/posted"
                            android:textColor="@color/colorBlackText"
                            android:textSize="@dimen/sp10"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/txtProductPostedTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:maxLines="1"
                            android:text="15 min ago"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp10"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp8"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:maxLines="1"
                            android:paddingEnd="3dp"
                            android:text="@string/by"
                            android:textColor="@color/colorBlackText"
                            android:textSize="@dimen/sp10"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/txtProductOwnerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsregular"
                            android:maxLines="1"
                            android:text="Daniel Z"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp10"
                            android:textStyle="normal" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.design.card.MaterialCardView>

</RelativeLayout>