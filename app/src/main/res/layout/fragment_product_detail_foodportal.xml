<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_marginStart="@dimen/dp15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivDishImage"
                            android:src="@drawable/image_placeholder"
                            android:layout_width="@dimen/dp60"
                            android:layout_gravity="center"
                            android:layout_height="@dimen/dp60" />

                        <TextView
                            android:gravity="center|start"
                            android:paddingStart="@dimen/dp6"
                            android:id="@+id/tvfoodName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsbold"
                            android:lineSpacingExtra="-10dp"
                            android:text="Berbere Spice Chicken Wings"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp25"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:padding="@dimen/dp5"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:background="@drawable/icon_time"
                                />

                            <TextView
                                android:id="@+id/tvPreparationTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center|start"
                                android:paddingStart="@dimen/dp5"
                                android:text="38 Minutes"
                                android:textColor="@color/colorNav"
                                android:textSize="@dimen/sp10"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:padding="@dimen/dp5"
                                android:layout_width="23dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:background="@drawable/icon_view"
                              />

                            <TextView
                                android:id="@+id/tvServingTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center|start"
                                android:paddingStart="@dimen/dp5"
                                android:text="38 views"
                                android:textColor="@color/colorBlackButton"
                                android:textSize="@dimen/sp10"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:padding="@dimen/dp5"
                                android:layout_gravity="top"
                                android:background="@drawable/heart_on"
                                android:backgroundTint="@color/colorRed" />

                            <TextView
                                android:id="@+id/tvServingDetails"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center|start"
                                android:paddingStart="@dimen/dp5"
                                android:text="38 likes"
                                android:textColor="@color/colorNav"
                                android:textSize="@dimen/sp10"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">



                        <ImageView
                            android:layout_gravity="center"
                            android:padding="@dimen/dp5"
                            android:tint="@color/colorNav"
                            android:src="@drawable/share"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />


                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvfoodDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp8"
                        android:fontFamily="@font/poppinssemibold"
                        android:text="88 % would make again"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>
                <!--
                                <FrameLayout
                                    android:id="@+id/videoViewWrapper"
                                    android:layout_width="match_parent"
                                    android:layout_height="300dp"
                                    android:layout_weight="1">-->

                <FrameLayout
                    android:id="@+id/video_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="400dp"
                    android:layout_weight="1"
                    android:background="@android:color/black">

                    <structure.com.foodportal.helper.UniversalVideoView
                        android:id="@+id/videoView"
                        android:layout_width="fill_parent"
                        android:layout_height="400dp"
                        android:layout_gravity="center"
                        app:uvv_autoRotation="false"
                        app:uvv_fitXY="true" />

                    <structure.com.foodportal.helper.UniversalMediaController
                        android:id="@+id/media_controller"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        app:uvv_scalable="false" />

                </FrameLayout>
                <!--
                   <VideoView
                       android:visibility="gone"
                       android:layout_gravity="center"
                       android:id="@+id/vvProductmainVideo"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_marginTop="@dimen/dp10"
                       android:layout_weight="1" />-->
                <!--   </FrameLayout>-->

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/dp8"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="@dimen/dp10"
                        android:paddingStart="@dimen/dp10"
                        android:paddingTop="@dimen/dp10">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsbold"
                            android:text="@string/ingredients"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp18"
                            android:textStyle="bold" />
                        <android.support.v7.widget.RecyclerView
                            android:scrollbars="none"
                            android:layout_marginBottom="@dimen/dp5"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_weight="1"
                            android:id="@+id/rvIngredients"
                            android:layout_width="match_parent"
                            android:transitionGroup="true"
                            android:layout_height="0dp"
                            android:nestedScrollingEnabled="true"

                            />


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_marginBottom="@dimen/dp10"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/roundedshape"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                        <TextView
                            android:paddingEnd="@dimen/dp5"
                            android:paddingStart="@dimen/dp5"
                            android:drawablePadding="@dimen/dp10"
                            android:drawableTint="@color/colorAccent"
                            android:drawableStart="@drawable/nav"
                            android:paddingTop="@dimen/dp10"
                            android:paddingBottom="@dimen/dp10"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/colorAccent"
                            android:text="Add to shopping list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />




                            </LinearLayout>

                     <LinearLayout
                         android:layout_marginTop="@dimen/dp10"
                         android:id="@+id/llRelated"
                         android:orientation="vertical"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/poppinsbold"
                            android:text="Related Recipes"
                            android:textAllCaps="true"
                            android:textSize="@dimen/dp20"
                            android:textColor="@color/colorAccent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />



                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvRelatedRecipes"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="@dimen/dp5"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_weight="1"
                            android:nestedScrollingEnabled="true" />
                     </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/dp8"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="@dimen/dp10"
                        android:paddingStart="@dimen/dp10"
                        android:paddingTop="@dimen/dp10">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsbold"
                            android:text="Preparations"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp18"
                            android:textStyle="bold" />


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvPreparations"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="@dimen/dp5"
                            android:layout_marginTop="@dimen/dp10"
                            android:layout_weight="1"
                            android:nestedScrollingEnabled="true" />


                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <Button
            android:id="@+id/btnStepByStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccentPink"
            android:gravity="center"
            android:text="Step-By-Step Mode"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</layout>