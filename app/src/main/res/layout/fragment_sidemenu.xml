<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@color/colorNav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:shadowColor="@color/colorBlack">

        <LinearLayout
            android:id="@+id/MainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.flaviofaria.kenburnsview.KenBurnsView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_menu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal">


                    <!--   <ImageView
                android:id="@+id/img_user_blur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:src="@drawable/img_menu" />-->

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_background"
                        android:layout_width="@dimen/dp56"
                        android:layout_height="@dimen/dp56"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp50"
                        android:src="@drawable/img_menu_user" />

                    <TextView
                        android:id="@+id/txt_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp20"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppinsregular"
                        android:gravity="center_horizontal"
                        android:text="Ali Zahid"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp25"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_useraddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:layout_marginEnd="@dimen/dp20"
                        android:layout_marginStart="@dimen/dp20"
                        android:drawableStart="@drawable/icon_menu_settings"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="visible" />

                </LinearLayout>


            </RelativeLayout>

            <!--   <structure.com.foodportal.customViews.CustomRecyclerView
            android:id="@+id/sideoptions"
            android:layout_width="match_parent"
            android:background="@color/colorNav"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp" />
        -->


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:drawableStart="@drawable/home"
                    android:drawableTint="@color/white"
                    android:drawablePadding="@dimen/dp20"
                    android:paddingStart="@dimen/dp20"
                    android:gravity="center|start"
                    android:text="Home"
                    android:layout_gravity="center"
                    android:id="@+id/home"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:textAllCaps="true"
                    android:fontFamily="@font/poppinsbold"
                    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                    android:textSize="17dp"
                    android:textColor="@color/white" />
                <ExpandableListView
                    android:scrollbars="none"
                    android:transitionGroup="true"
                    android:transcriptMode="normal"
                    android:dividerHeight="0dp"
                    android:divider="@null"
                    android:layout_below="@+id/home"
                    android:id="@+id/sideoptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl" />

                <TextView
                    android:drawableStart="@drawable/icon_menu_logout"
                    android:paddingStart="@dimen/dp20"
                    android:drawablePadding="@dimen/dp20"
                    android:drawableTint="@color/white"
                    android:gravity="center|start"
                    android:text="Logout"
                    android:layout_gravity="center"
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:textAllCaps="true"
                    android:fontFamily="@font/poppinsbold"
                    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                    android:textSize="17dp"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>