<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.40"
                android:padding="@dimen/dp15">

                <ImageView
                    android:id="@+id/ivProductImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.02"
                android:background="@color/colorLighterGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.49"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBrand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp8"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_marginStart="@dimen/dp15"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginBottom="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp15"
                    android:background="@color/colorLighterGrey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp15">

                    <TextView
                        android:id="@+id/tvRateProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rate_product"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp14" />

                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        android:id="@+id/ratingProduct"
                        style="@style/Widget.MaterialRatingBar.RatingBar"
                        android:layout_width="@dimen/dp128"
                        android:layout_height="@dimen/dp24"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:minHeight="@dimen/dp12"
                        android:rating="2"
                        android:stepSize="1"
                        app:mrb_progressTint="@color/colorBlue"
                        app:mrb_secondaryProgressTint="@color/colorTextGray" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginBottom="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp8"
                    android:background="@color/colorLighterGrey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp15">

                    <TextView
                        android:id="@+id/tvRateSeller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rate_product"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp14" />

                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        android:id="@+id/ratingSeller"
                        style="@style/Widget.MaterialRatingBar.RatingBar"
                        android:layout_width="@dimen/dp128"
                        android:layout_height="@dimen/dp24"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:minHeight="@dimen/dp12"
                        android:rating="2"
                        android:stepSize="1"
                        app:mrb_progressTint="@color/colorBlue"
                        app:mrb_secondaryProgressTint="@color/colorTextGray" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginBottom="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp8"
                    android:background="@color/colorLighterGrey" />

                <Button
                    android:id="@+id/btnRate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp36"
                    android:layout_margin="@dimen/dp15"
                    android:background="@drawable/roundcorner_button"
                    android:text="@string/submit"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>