<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginEnd="@dimen/dp20"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp42"
            android:paddingBottom="@dimen/dp20">

            <TextView
                android:layout_width="@dimen/dp250"
                android:layout_height="@dimen/dp92"
                android:layout_gravity="center"
                android:background="@drawable/title_logo"
                android:backgroundTint="@color/white" />


            <TextView
                android:id="@+id/txtAppname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/semiboldfont"
                android:text="@string/app_name"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sp36"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                android:fontFamily="@font/poppinsbold"
                android:padding="@dimen/dp8"
                android:text="@string/email_en"
                android:textColor="@color/white" />

            <android.support.v7.widget.CardView
                app:cardCornerRadius="@dimen/dp15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/dp8"
                    android:textColorHint="@color/colorBlackShade"
                    android:textSize="@dimen/sp14" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                android:fontFamily="@font/poppinsbold"
                android:padding="@dimen/dp8"
                android:text="@string/password_en"
                android:textColor="@color/white" />

            <android.support.v7.widget.CardView
                app:cardCornerRadius="@dimen/dp15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:padding="@dimen/dp8"
                    android:textColorHint="@color/colorBlackShade"
                    android:textSize="@dimen/sp14" />
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp40"
                android:background="@drawable/roundcorner_button_white"
                android:backgroundTint="@color/colorAccent"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/login_en"
                android:textAllCaps="true"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/roundcorner_button_white"
                android:backgroundTint="@color/colorNav"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/sign_up_en"
                android:textAllCaps="true"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/tv_social_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/roundcorner_button_white"
                android:backgroundTint="@color/fbColor"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/social_login_en"
                android:textColor="@color/white"
                android:visibility="visible" />

        </LinearLayout>

    </ScrollView>

</layout>