<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".fragment.foodportal.FoodLoginFragment">

    <ScrollView
        android:background="@drawable/img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            android:paddingTop="@dimen/dp42">

            <TextView
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/title_logo"
                android:layout_width="@dimen/dp250"
                android:layout_height="@dimen/dp92" />


            <TextView
                android:id="@+id/txtAppname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/semiboldfont"
                android:text="@string/app_name"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sp36"
                android:textStyle="bold"
                android:visibility="gone" />
            <TextView
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/white"
                android:text="Email"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/dp15">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etemail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:padding="@dimen/dp8"
                    android:textColorHint="@color/colorBlackShade"
                    android:textSize="@dimen/sp14" />
            </android.support.v7.widget.CardView>
            <TextView
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/white"
                android:text="@string/password"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/dp15">

                <EditText
                    android:id="@+id/etpassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:padding="@dimen/dp8"
                    android:textColorHint="@color/colorBlackShade"
                    android:textSize="@dimen/sp14" />
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btnSignin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp40"
                android:backgroundTint="@color/colorAccent"
                android:background="@drawable/roundcorner_button_white"
                android:text="@string/login"
                android:textAllCaps="true"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/white" />


            <Button
                android:layout_marginTop="@dimen/dp10"
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorNav"
                android:background="@drawable/roundcorner_button_white"
                android:text="@string/signup"
                android:textAllCaps="true"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/white" />


            <Button
                android:backgroundTint="@color/fbColor"
                android:background="@drawable/roundcorner_button_white"
                android:id="@+id/tvsociallogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp10"
                android:fontFamily="@font/poppinsbold"
                android:text="Try with Social Login"
                android:textColor="@color/white"
                android:visibility="visible" />

        </LinearLayout>

    </ScrollView>

</layout>