<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="@string/choose_your_payment_option"
            android:textColor="@color/colorBlackText"
            android:textSize="@dimen/sp14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_item_rounded"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivCreditCard"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp30"
                android:layout_height="wrap_content"
                android:src="@drawable/creditcard" />

            <TextView
                android:id="@+id/tvCreditCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credit_card"
                android:gravity="center"
                android:textColor="@color/colorBlackShade"
                android:layout_marginBottom="@dimen/dp30"
                android:textSize="@dimen/sp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/lightGray" />

            <ImageView
                android:id="@+id/ivCash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp30"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/tvCash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cash_on_delivery"
                android:textColor="@color/colorBlackShade"
                android:layout_marginBottom="@dimen/dp30"
                android:textSize="@dimen/sp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/lightGray" />

            <ImageView
                android:id="@+id/ivApple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp30"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/tvApple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apple_pay"
                android:layout_marginBottom="@dimen/dp30"
                android:textColor="@color/colorBlackShade"
                android:textSize="@dimen/sp16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/lightGray" />

        </LinearLayout>
    </LinearLayout>
</layout>