<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_bg" />

        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp30"
            android:gravity="top|center"
            android:orientation="vertical">


            <TextView
                android:layout_width="@dimen/dp250"
                android:layout_height="@dimen/dp92"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/title_logo"
                android:gravity="center" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp10"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:text="Create an Account"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp10"
                android:fontFamily="@font/lightfont"
                android:gravity="center"
                android:text="PLease Enter your Details"
                android:textColor="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginStart="@dimen/dp10"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/white"
                    android:text="First name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/dp15">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etfname"
                        android:imeOptions="actionNext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:padding="@dimen/dp8"
                        android:inputType="text"
                        android:textColorHint="@color/colorBlackShade"
                        android:textSize="@dimen/sp14" />
                </android.support.v7.widget.CardView>
               </LinearLayout>
                    <LinearLayout
                        android:layout_marginStart="@dimen/dp10"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                    <TextView
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/white"
                    android:text="Last name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/dp15">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etlname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:padding="@dimen/dp8"
                        android:inputType="text"
                        android:textColorHint="@color/colorBlackShade"
                        android:textSize="@dimen/sp14" />
                </android.support.v7.widget.CardView>
                        </LinearLayout>


                </LinearLayout>
                <TextView
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/white"
                    android:text="Email"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/dp15">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etemail"
                        android:imeOptions="actionNext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:padding="@dimen/dp8"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@color/colorBlackShade"
                        android:textSize="@dimen/sp14" />
                </android.support.v7.widget.CardView>
                <TextView
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/white"
                    android:text="Phone Number"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/dp15">

                    <EditText
                        android:id="@+id/etnumber"
                        android:imeOptions="actionNext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:padding="@dimen/dp8"
                        android:inputType="numberDecimal"
                        android:textColorHint="@color/colorBlackShade"
                        android:textSize="@dimen/sp14" />
                </android.support.v7.widget.CardView>
                <TextView
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/white"
                    android:text="@string/password"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/dp15">

                    <EditText
                        android:id="@+id/etpassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:padding="@dimen/dp8"
                        android:inputType="textPassword"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/colorBlackShade"
                        android:textSize="@dimen/sp14" />
                </android.support.v7.widget.CardView>
                <TextView
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/white"
                    android:text="@string/confim_password"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/dp15">

                    <EditText
                        android:id="@+id/etconfirmpassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:padding="@dimen/dp8"
                        android:inputType="textPassword"
                        android:imeOptions="actionDone"
                        android:textColorHint="@color/colorBlackShade"
                        android:textSize="@dimen/sp14" />
                </android.support.v7.widget.CardView>


                    <Button
                        android:id="@+id/tvWithEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp10"
                        android:backgroundTint="@color/colorAccent"
                        android:background="@drawable/roundcorner_button_white"
                        android:gravity="center"
                        android:text="Create an Account"
                        android:textColor="@color/white"
                         />

            </LinearLayout>


        </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</layout>